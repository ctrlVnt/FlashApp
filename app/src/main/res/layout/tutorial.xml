<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title">

        <TextView
            android:id="@+id/title_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Tutorial"
            android:fontFamily="@font/helveticanowdisplaymedium"
            android:textColor="@color/accent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp">
        </TextView>

        <TextView
            android:id="@+id/text_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/i_understand"
            android:layout_below="@+id/title_tutorial"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/helveticahowdisplay"
            android:scrollbars="vertical"
            android:text="@string/tutorial"
            android:textSize="18sp"
            android:textColor="@color/accent">
        </TextView>

        <TextView
            android:id="@+id/i_understand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:text="@string/i_understand"
            android:textColor="@color/accent"
            android:fontFamily="@font/helveticahowdisplay"
            android:clickable="true"
            android:textSize="25sp">
        </TextView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>